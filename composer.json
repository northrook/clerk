{
  "name": "northrook/clerk",
  "description": "A simple wrapper for the Symfony\\Stopwatch.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin",
      "email": "mn@northrook.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Northrook\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3",
    "ext-dom": "*",
    "ext-session": "*",
    "ext-json": "*",
    "symfony/stopwatch": "@stable",
    "northrook/logger": "dev-main",
    "northrook/support": "dev-main"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "@stable",
    "northrook/php-cs": "*"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse"
  }
}
